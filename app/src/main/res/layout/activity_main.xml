<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.InicioApp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        android:gravity="center"
        android:textAlignment="center"
        app:flow_horizontalAlign="center"
        app:flow_verticalAlign="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="listConductores"
            android:text="Conductores" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="listCamiones"
            android:text="Camiones" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="listUsuarios"
            android:text="Usuarios" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="listPaquetes"
            android:text="Paquetes" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>